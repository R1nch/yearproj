<div class="card">
  <div class="card-header">
    <h3>Редактировать профиль <% resource_name.to_s.humanize %></h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %>Эл. почта<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Электронная почта" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>В настоящее время ожидает подтверждения для: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <% f.label :password %> Новый пароль<br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Оставьте поле пустым, если не хотите его менять" %>
    <% if @minimum_password_length %>

      <em>Минимум <%= @minimum_password_length %> символов</em>
    <% end %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %>Подтвердить пароль<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Введите новый пароль ещё раз" %>
  </div>

  <div class="field form-group">
    <% f.label :current_password %> Текущий пароль<br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Введите текущий пароль, чтобы подтвердить изменения" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Обновить", class:'btn btn-dark' %>
  </div>
<% end %>
  </div>
</div>

<br/>

<div class="card">
  <div class="card-header">
    <h3>Удалить учетную запись</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Хотите удалить вашу учетную запись?</h5>
    <p class="card-text"><%= button_to "Удалить учетную запись", registration_path(resource_name), data: { confirm: "Удалить учетную запись?" }, method: :delete, class:'btn btn-danger' %></p>
  </div>
</div>
<br/>

<%= link_to "Назад", :back, class:'btn btn-secondary' %>
